<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.spring.mapper.LoginMapper">
    <resultMap type="boot.spring.po.Staff" id="staffMap">
        <id property="staff_id" column="id"></id>
        <result property="username" column="code"/>
        <result property="password" column="pwd_src"/>
        <result property="last_name" column="name"/>
    </resultMap>
    <select id="getpwdbyname" parameterType="String" resultMap="staffMap">
    	select id,code,pwd_src,name from secu_user where code = #{name}
    </select>
    <select id="getnamebyid" parameterType="String" resultMap="staffMap">
    	select id,code,pwd_src,name from secu_user where id = #{id}
    </select>

</mapper>